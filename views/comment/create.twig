{{ include('layouts/header.twig', {title:'Create Comment'}) }}

<div class="container">
    <h1>Add a Comment</h1>

    <form action="{{ base }}/comment/store" method="post">
        <label for="content">Comment:</label>
        <textarea id="content" name="content" required></textarea>

        <input type="submit" class="btn" value="Submit Comment">
    </form>

    <a href="{{ base }}/comments" class="btn">Back to Comments</a>
</div>

