{{ include('layouts/header.twig', {title:'Comments List'}) }}

<div class="container">
    <h1>All Comments</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Comment</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.id }}</td>
                    <td>{{ comment.content }}</td>
                    <td>
                        <a href="{{ base }}/comment/{{ comment.id }}" class="btn">View</a>
                        <a href="{{ base }}/comment/{{ comment.id }}/edit" class="btn">Edit</a>
                        <form action="{{ base }}/comment/{{ comment.id }}/delete" method="post" style="display:inline;"
                              onsubmit="return confirm('Are you sure you want to delete this comment?');">
                            <input type="hidden" name="id" value="{{ comment.id }}">
                            <input type="submit" class="btn red" value="Delete">
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ base }}/comment/create" class="btn">Add New Comment</a>
</div>

{{ include('layouts/footer.twig') }}
