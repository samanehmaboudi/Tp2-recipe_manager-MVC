{{ include('layouts/header.twig', {title:'User Details'}) }} 

<div class="container">
    <h1>{{ user.name }}</h1>

    <p><strong>Email: </strong>{{ user.email }}</p>
    <p><strong>Registered on: </strong>{{ user.created_at }}</p>

    <a href="{{ base }}/users" class="btn">Back to Users</a>
    <a href="{{ base }}/user/{{ user.id }}/edit" class="btn">Edit</a>

    <form action="{{ base }}/user/{{ user.id }}/delete" method="post" style="display:inline;"
          onsubmit="return confirm('Are you sure you want to delete this user?');">
        <input type="hidden" name="id" value="{{ user.id }}">
        <input type="submit" class="btn red" value="Delete">
    </form>
</div>

{{ include('layouts/footer.twig') }}
